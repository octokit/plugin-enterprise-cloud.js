{
  "name": "@octokit/plugin-enterprise-cloud",
  "version": "0.0.0-development",
  "publishConfig": {
    "access": "public"
  },
  "description": "Octokit plugin for GitHubâs Enterprise Cloud REST APIs",
  "scripts": {
    "build": "pika-pack build",
    "lint": "prettier --check '{src,test,scripts}/*' README.md package.json",
    "lint:fix": "prettier --write '{src,test,scripts}/*' README.md package.json",
    "pretest": "npm run -s lint",
    "test": "jest --coverage",
    "update-endpoints": "npm-run-all update-endpoints:*",
    "update-endpoints:fetch-json": "node scripts/update-endpoints/fetch-json",
    "update-endpoints:code": "node scripts/update-endpoints/code"
  },
  "repository": "github:octokit/plugin-enterprise-cloud.js",
  "keywords": [
    "octokit",
    "github",
    "api",
    "rest",
    "plugin",
    "enterprise"
  ],
  "author": "Gregor Martynus (https://github.com/gr2m)",
  "license": "MIT",
  "dependencies": {
    "@octokit/types": "^6.0.0"
  },
  "peerDependencies": {
    "@octokit/core": ">=3"
  },
  "devDependencies": {
    "@octokit/core": "^4.0.0",
    "@pika/pack": "^0.3.7",
    "@pika/plugin-build-node": "^0.9.0",
    "@pika/plugin-build-web": "^0.9.0",
    "@pika/plugin-ts-standard-pkg": "^0.9.0",
    "@types/fetch-mock": "^7.3.2",
    "@types/jest": "^28.0.0",
    "@types/node": "^16.0.0",
    "camelcase": "^7.0.0",
    "fetch-mock": "^9.0.0",
    "github-openapi-graphql-query": "^2.0.0",
    "jest": "^28.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.7.1",
    "semantic-release": "^19.0.0",
    "semantic-release-plugin-update-version-in-files": "^1.0.0",
    "sort-keys": "^4.2.0",
    "ts-jest": "^28.0.0",
    "typescript": "^4.0.2"
  },
  "jest": {
    "preset": "ts-jest",
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-node",
        {
          "minNodeVersion": "14"
        }
      ],
      [
        "@pika/plugin-build-web"
      ]
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "./pkg"
        }
      ],
      [
        "semantic-release-plugin-update-version-in-files",
        {
          "files": [
            "pkg/dist-web/*",
            "pkg/dist-node/*",
            "pkg/*/version.*"
          ]
        }
      ]
    ]
  },
  "renovate": {
    "extends": [
      "github>octokit/.github"
    ],
    "packageRules": [
      {
        "depTypeList": [
          "dependencies"
        ],
        "excludePackageNames": [
          "sort-keys"
        ]
      }
    ]
  },
  "engines": {
    "node": ">= 14"
  }
}
